<tr class="border-b">
  <td class="p-2"><%= task.position %></td>
  <td class="p-2"><%= task.name %></td>
  <td class="p-2"><%= completed_status(task.completed?) %></td>
  <td class="p-2"><%= task.category&.name || '-' %></td>


  <td class="actions p-2">
    <%= link_to("Show", task_path(task), class: 'action show text-blue-500') %>
    <%= link_to("Edit", edit_task_path(task), class: 'action edit text-yellow-500') %>
    <%= link_to("Delete", delete_task_path(task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'action delete text-red-500') %>
  </td>
</tr>