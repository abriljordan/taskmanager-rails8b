<%= link_to("Back to List", tasks_path, class: 'back-link') %>

<div class="tasks delete">
  <h2 class="text-xl font-bold mb-4">Delete Task</h2>

  <%= form_for(@task, method: :delete) do |f| %>
    <p>Are you sure you want to permanently delete this task?</p>
    <p class="font-semibold"><%= @task.name %></p>

    <div class="form-buttons">
      <%= f.submit("Delete Task", class: 'bg-red-500 text-white py-2 px-4 rounded') %>
    </div>
  <% end %>
</div>