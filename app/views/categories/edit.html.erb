<h1>Edit Category</h1>

<%= link_to "Back to Categories", categories_path %>

<div>
  <%= form_for @category do |f| %>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="mb-4">
      <%= f.label :description%>
      <%= f.text_area :description %>
    </div>

    <div class="mb-4">
      <%= f.label :position %>
      <%= f.number_field :position %>
    </div>

    <div class="form-buttons">
      <%= f.submit "Update Category" %>
    </div>
  <% end %>
</div>