<div>
    <h2>Categories</h2>
<div> <%= link_to 'New Category', new_category_path %></div>
    <table>
        <thead>
            <tr>
                <th> Name </th>
                <th> Description </th>
                <th> Actions </th>
            </tr>
        </thead>
        <tbody>
            <% @categories.each do |category| %>
                <tr>
                    <td> <%=category.name %> </td>
                    <td> <%=category.description %> </td>
                    <td> 
                        <%= link_to 'Show', category_path(category) %> 
                        <%= link_to 'Edit', edit_category_path(category) %>
                        <%= link_to 'Delete', delete_category_path(category), method: :delete, data: { confirm: 'Are you sure?' } %> 
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>